        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>User Information</title>
        <!-- Your custom CSS styles can go here -->
        <style>
            /* Add any custom styles here */
            .navbar-nav {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            .nav-item {
                position: relative;
            }

            .dropdown-content {
                display: none;
                position: absolute;
                top: 100%;
                left: 0;
                background-color: #f9f9f9;
                min-width: 160px;
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
                z-index: 1;
            }

            .nav-item:hover .dropdown-content {
                display: block;
            }
        </style>
    </head>
    <header>
        <ul class="navbar-nav ml-auto mt-10">
            <li class="nav-item">
                <a class="nav-link login-button">{{ app.user.getNom() }} {{ app.user.getPrenom() }}</a>
                <div class="dropdown-content">
                    <h3 style="color: black;">Your Profile</h3>
                    <a href="{{ path('user_show_details', {'id': app.user.getId()}) }}">User Information</a>
                    <br>
